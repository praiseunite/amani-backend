ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database - PostgreSQL (example)
# Use the format: postgresql+asyncpg://user:password@host:5432/dbname
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/postgres

# Supabase (optional)
