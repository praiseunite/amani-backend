# Example environment variables for local development and for contributors.
# Copy this file to `.env` and fill in your actual values. 
# DO NOT commit real secrets to version control.

# ===================================
# Application Settings
# ===================================
APP_NAME=Amani Escrow Backend
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8000

# ===================================
# Security Settings
# ===================================
# Generate a secure random key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-generate-a-secure-random-string-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================================
# Database Configuration
# ===================================
# Use the format: postgresql+asyncpg://user:password@host:5432/dbname
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/amani_db

# ===================================
# Supabase Configuration (Optional)
# ===================================
# If using Supabase, get these from your Supabase project settings
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_KEY=your-supabase-service-role-key-here

# ===================================
# Redis Configuration (Optional)
# ===================================
# For production rate limiting and session storage
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=False

# ===================================
# FinCra Payment API
# ===================================
# Get these credentials from your FinCra dashboard
FINCRA_API_KEY=your-fincra-api-key-here
FINCRA_API_SECRET=your-fincra-api-secret-here
FINCRA_BASE_URL=https://api.fincra.com

# ===================================
# LNbits Lightning API
# ===================================
# Get these from your LNbits instance
# Use the Admin Key for full wallet operations
LNBITS_API_KEY=your-lnbits-admin-key-here
LNBITS_BASE_URL=https://legend.lnbits.com

# ===================================
# CORS Configuration
# ===================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ===================================
# Logging Configuration
# ===================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ===================================
# Email Configuration (Brevo/SendInBlue)
# ===================================
# Get these from your Brevo account settings
BREVO_API_KEY=your-brevo-api-key-here
BREVO_FROM_EMAIL=noreply@yourdomain.com
BREVO_FROM_NAME=Amani Escrow
BREVO_SMTP_LOGIN=your-brevo-smtp-login-here

# ===================================
# Security Settings
# ===================================
# Set to True in production to enforce HTTPS
FORCE_HTTPS=False

# ===================================
# Rate Limiting Configuration
# ===================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=100

# ===================================
# Monitoring and Observability
# ===================================
# Sentry Error Tracking (get from https://sentry.io)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# OpenTelemetry Tracing
TRACING_ENABLED=False
TRACING_EXPORTER=console  # Options: otlp, console
OTLP_ENDPOINT=http://localhost:4317
OTLP_HEADERS=  # Comma-separated key=value pairs for authentication

# Alerting and Notifications
SLACK_WEBHOOK_URL=
PAGERDUTY_API_KEY=
PAGERDUTY_SERVICE_ID=
